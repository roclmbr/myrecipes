<%= render 'shared/page_title', title: "Recipe listing" %>

<% @recipes.each do |recipe| %>
    <div class="row">
      <div class="col-md-2">
        <section class="chef_info center">
            <%= gravatar_for(recipe.user, size:120) %>
        </section>  
      </div>
        <div class="col-md-8 well">
            <h4>Name: <%= link_to recipe.name, recipe_path(recipe) %></h4>
            <p>Description: <%= truncate(recipe.description, length: 150) %></p>
            <p><span class="quiet"><small>Created: <%= time_ago_in_words(recipe.created_at) %> ago.</small></span></p>
        </div>
    </div>
<% end %>
