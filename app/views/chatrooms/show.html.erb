<%= render 'shared/page_title', title: 'Chatroom' %>

<div class = "row chat-container">
    <div class="col-md-8 center-block">
        <div class="messages" id="message">
          <%= render @messages %>
       </div>
    <hr />
        <div class="message-container">
          <%= form_for(@message, remote: true, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <%= f.text_area :content, class: "form-control", data: { behavior: "room_speaker" }, placeholder: "Enter your message" %>
            <%= f.submit "Send", class: 'btn btn-primary', data: { send: "message" } %>
          <% end %>
         </div>   
    </div>
</div>